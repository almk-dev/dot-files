#!/bin/bash
cwd=$(pwd)
for file in $cwd/home/*; do
    if [[ `basename $file` == 'config' ]]; then
        for file in $cwd/home/config/*; do
            ln -snfv $file ~/.config/`basename $file`
        done
    else
        ln -snfv $file ~/.`basename $file`
    fi
done
sudo cp $cwd/etc/udev/rules.d/50-zsa.rules /etc/udev/rules.d/
